{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../",
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "verbatimModuleSyntax": false,
    "baseUrl": "../../",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "consumer.ts",
    "link/schema.ts",
    "link/game-logic.ts",
    "link/game-utils.ts",
    "link/hand-solver.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../../src/env.js",
    "../../src/server/db/index.ts"
  ]
}
