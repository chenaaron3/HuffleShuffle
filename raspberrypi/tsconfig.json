{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "include": [
    "generic-daemon.ts",
    "dealer-daemon.ts",
    "hand-daemon.ts",
    "scanner-daemon.ts",
    "daemon-util.ts",
    "daemon-info.ts",
    "types/**/*.d.ts"
  ]
}
