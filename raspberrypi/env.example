# HuffleShuffle Raspberry Pi Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=http://localhost:3000

# LiveKit Configuration (required for video streaming)
LIVEKIT_URL=wss://your.livekit.server
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Pusher Configuration (required for device signaling)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# AWS SQS Configuration (required for scanner daemon)
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/huffle-scans.fifo
AWS_REGION=us-east-1

# Scanner Device Configuration (only for scanner type devices)
SCANNER_DEVICE=/dev/hidraw0

# Optional: AWS Credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
